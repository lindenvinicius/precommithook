#!/bin/bash

# Git pre-commit hook for Ruff linting
# Place this file in .git/hooks/pre-commit and make it executable with:
# chmod +x .git/hooks/pre-commit

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}Running Ruff linter pre-commit hook...${NC}"
echo "----------------------------------------"

# Check if ruff is installed
if ! command -v ruff &> /dev/null; then
    echo -e "${RED}Error: Ruff is not installed!${NC}"
    echo "Please install ruff using: pip install ruff"
    exit 1
fi

# Get the root directory of the git repository
ROOT_DIR=$(git rev-parse --show-toplevel)

# Run ruff check on the root folder
echo -e "${YELLOW}Checking Python files for linting issues...${NC}"
echo ""

# Run ruff and capture the output
RUFF_OUTPUT=$(ruff check "$ROOT_DIR" 2>&1)
RUFF_EXIT_CODE=$?

# Check if there are any linting issues
if [ $RUFF_EXIT_CODE -eq 0 ]; then
    echo -e "${GREEN}✓ No linting issues found!${NC}"
    echo "----------------------------------------"
    echo -e "${GREEN}Pre-commit check passed successfully.${NC}"
    exit 0
else
    echo -e "${RED}✗ Linting issues found!${NC}"
    echo ""
    echo "Linting problems detected in the following locations:"
    echo "======================================================"
    echo "$RUFF_OUTPUT"
    echo "======================================================"
    
    # Count the number of issues
    ISSUE_COUNT=$(echo "$RUFF_OUTPUT" | grep -c "^$ROOT_DIR")
    if [ $ISSUE_COUNT -gt 0 ]; then
        echo ""
        echo -e "${YELLOW}Total issues found: $ISSUE_COUNT${NC}"
    fi
    
    echo ""
    echo -e "${YELLOW}Options:${NC}"
    echo "1. Fix the issues manually and try committing again"
    echo "2. Run 'ruff check --fix .' to auto-fix some issues"
    echo "3. Run 'ruff format .' to format your code"
    echo "4. Use 'git commit --no-verify' to skip this check (not recommended)"
    echo ""
    echo -e "${RED}Commit aborted due to linting errors.${NC}"
    exit 1
fi