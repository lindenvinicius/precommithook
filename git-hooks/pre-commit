#!/bin/bash

# Git pre-commit hook for Ruff linting

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}Running pre-commit linters (Ruff + ESLint)...${NC}"
echo "----------------------------------------"

# Check if ruff is installed
if ! command -v ruff &> /dev/null; then
    echo -e "${RED}Error: Ruff is not installed!${NC}"
    echo "Please install ruff using: pip install ruff"
    exit 1
fi

# Get the root directory of the git repository
ROOT_DIR=$(git rev-parse --show-toplevel)

# Run ruff check on the root folder
echo -e "${YELLOW}Checking Python files for linting issues...${NC}"
echo ""

# Run ruff and capture the output
RUFF_OUTPUT=$(ruff check "$ROOT_DIR" 2>&1)
RUFF_EXIT_CODE=$?

# Check if there are any linting issues
if [ $RUFF_EXIT_CODE -eq 0 ]; then
    echo -e "${GREEN}✓ No linting issues found!${NC}"
    echo "----------------------------------------"
    echo -e "${GREEN}Pre-commit check passed successfully.${NC}"
    exit 0
else
    echo -e "${RED}✗ Linting issues found!${NC}"
    echo ""
    echo "Linting problems detected in the following locations:"
    echo "======================================================"
    echo "$RUFF_OUTPUT"
    echo "======================================================"
    
    # Count the number of issues
    ISSUE_COUNT=$(echo "$RUFF_OUTPUT" | grep -c "^$ROOT_DIR")
    if [ $ISSUE_COUNT -gt 0 ]; then
        echo ""
        echo -e "${YELLOW}Total issues found: $ISSUE_COUNT${NC}"
    fi
    
    echo ""
    echo -e "${YELLOW}Options:${NC}"
    echo "1. Fix the issues manually and try committing again"
    echo "2. Run 'ruff check --fix .' to auto-fix some issues"
    echo "3. Run 'ruff format .' to format your code"
    echo "4. Use 'git commit --no-verify' to skip this check (not recommended)"
    echo ""
    echo -e "${RED}Commit aborted due to linting errors.${NC}"
    exit 1
fi

# ESLint pre-commit: check staged JS/TS files inside a specific folder
set -euo pipefail

FOLDER_TO_LINT="."

EXT_REGEX='\.(js|jsx|ts|tsx|mjs|cjs)$'

ROOT="$(git rev-parse --show-toplevel)"
cd "$ROOT"

# Prefer local ESLint; fall back to global if present
if npx --no-install eslint -v >/dev/null 2>&1; then
  ESLINT='npx --no-install eslint'
elif command -v eslint >/dev/null 2>&1; then
  ESLINT='eslint'
else
  echo "❌ ESLint not found. Install it locally with: npm i -D eslint"
  exit 1
fi

# Collect staged files in the target folder (add/modify/rename) using NUL delimiters
mapfile -d '' FILES < <(
  git diff --cached --name-only -z --diff-filter=ACMR -- "$FOLDER_TO_LINT" \
  | grep -zE "$EXT_REGEX" || true
)

if (( ${#FILES[@]} == 0 )); then
  echo "ESLint: no staged JS/TS files in '$FOLDER_TO_LINT'."
  exit 0
fi

echo "ESLint: checking ${#FILES[@]} file(s) in '$FOLDER_TO_LINT'..."
# Run ESLint on the staged file list
if ! printf '%s\0' "${FILES[@]}" | xargs -0 $ESLINT --format=stylish; then
  echo
  echo "❌ ESLint found problems. Fix them and re-stage before committing."
  # To also fail on warnings, add: --max-warnings=0
  exit 1
fi

echo "✅ ESLint passed."
exit 0
